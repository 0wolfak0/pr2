<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="417dp"
            android:layout_height="0dp"
            android:layout_marginBottom="121dp"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rrr" />

        <Button
            android:id="@+id/button"
            android:layout_width="123dp"
            android:layout_height="74dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="63dp"
            android:layout_marginBottom="7dp"
            android:background="#560E0E"
            android:backgroundTint="#AB3838"
            android:hapticFeedbackEnabled="false"
            android:text="SIGN IN"
            android:textColor="#EF0606"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/button6"
            app:layout_constraintEnd_toStartOf="@+id/button6"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="1.0"
            app:strokeColor="#C51B1B" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="402dp"
            android:layout_height="91dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:text="lets make india plastic free. if you see any plastic then click the report button below. this will send your location to the concerned authority who will then clean it up"
            android:textColor="#F60404"
            android:textColorLink="#F4F0F0"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/button6"
            android:layout_width="190dp"
            android:layout_height="75dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="9dp"
            android:text="SIGN UP"
            android:textColor="#FA0505"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="48dp"
            android:layout_height="51dp"
            android:layout_marginStart="196dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="29dp"
            android:text="OR"
            android:textColor="#F8F3F3"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
